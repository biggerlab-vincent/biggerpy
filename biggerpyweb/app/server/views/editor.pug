.container-info
	- user = typeof(udata) != 'undefined' ? udata : { }
	input(type='hidden', value= user._id)#userId
	//h2 Signed in as: #{user.name}
	//-
		select#selectList(class='selectpicker', onchange='getOption()')
			option - Select Profile
			option Student 1
			option Student 2
			option Student 3
			option Student 4
			option Student 5
			option Student 6
			option Student 7
			option Student 8
		button#btn-replace.btn.btn-default Replace in Code
		br
		p#resulttitle(style='font-size:16px;')
		p#result(style='font-size:16px; font-family: monospace;')
	div#lesson
		select#selectSampleCode( class='templateSelect', onchange='getLesson()')
			optgroup
				option Template Code
	div#server
		select#server-list(class='selectserver', onchange='getserver()' , name="server")
			option(selected="4711", value="" )
				|Select your server
			option(value="4711")
				|Server1
			option(value="4712")
				|Server2
			option(value="4713")
				|Server3
			option(value="4714")
				|Server4
	div#container-editor 
		if user.userType == "admin"
			a(href="/manage_template")
				div(class='btn-editor')
					button#btn-manageTemplate
						|Manage Template
		div(class='btn_small')
			button#btn-save
				|Save
			button#btn-load
				|Load
		
		if user.userType !== "student"
			div(class='btn_small')
				button#btn-loadTemplate
					|Template
				button#btn-loadFinal
					|Final
		div(class='btn-editor')
			button#btn-reset
				|Reset to Template
			button#btn-run
				|Run Script
			button#btn-stop
				|Stop Script
		h2.log-title Python Console
		div.python-log
			p#log
		div(class='btn-editor')
			if user.userType == "student"
				button#btn-loadHint
					|Load Hint
			else
				button#btn-saveHint
					|Save Hint
div#editor-control
	ul.nav.nav-tabs
		li(role="presentation" class="active" id="btn-editor") 
			a(href="#" title="Editor")
				|Editor
		li(role="presentation" class="" id="btn-hint") 
			a(href="#" title="Hint")
				|Hint
